<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reservas Registradas</title>
  <!-- Agregar Bootstrap para mejorar la apariencia -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f8f9fa;
    }
    h2 {
      color: #343a40;
      font-weight: bold;
    }
    .table th {
      background-color: #6c757d;
      color: white;
    }
    .table td {
      vertical-align: middle;
    }
    .actions a {
      margin-right: 5px;
    }
    .btn-custom {
      background-color: #4e4376;
      color: white;
    }
    .btn-custom:hover {
      background-color: #2b5876;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2>Reservas Registradas</h2>
    
    <!-- Botón de regreso al inicio -->
    <a href="/dashboard" class="btn btn-secondary mb-3">Regresar al Dashboard</a>

    <a href="/reservas/nuevo" class="btn btn-success mb-3">Nueva Reserva</a>

    <!-- Tabla de reservas -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Cliente</th>
          <th>Habitación</th>
          <th>Fecha Entrada</th>
          <th>Fecha Salida</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% reservas.forEach(reserva => { %>
          <tr>
            <td><%= reserva.id %></td>
            <td><%= reserva.cliente %></td>
            <td><%= reserva.habitacion %></td>
            <!-- Formato mejorado para fechas -->
            <td><%= new Date(reserva.fecha_entrada).toLocaleDateString('es-PE') %></td>
            <td><%= new Date(reserva.fecha_salida).toLocaleDateString('es-PE') %></td>
            <td><%= reserva.estado %></td>
            <td class="actions">
              <!-- Botón de eliminar con confirmación -->
              <a href="/reservas/eliminar/<%= reserva.id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Seguro de eliminar esta reserva?')">Eliminar</a>
              <!-- Botón de editar -->
              <a href="/reservas/editar/<%= reserva.id %>" class="btn btn-warning btn-sm">Editar</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Agregar los scripts de Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
