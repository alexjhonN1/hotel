<h1>Clientes</h1>

<a href="/clientes/nuevo">Agregar Nuevo Cliente</a>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Teléfono</th>
      <th>Documento</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% clientes.forEach(cliente => { %>
      <tr>
        <td><%= cliente.id %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.correo %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.documento_identidad %></td>
        <td>
          <a href="/clientes/editar/<%= cliente.id %>">Editar</a> |
          <a href="/clientes/eliminar/<%= cliente.id %>" onclick="return confirm('¿Seguro de eliminar?')">Eliminar</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
