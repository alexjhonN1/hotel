<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Habitaciones</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f6f9;
      padding: 40px;
    }

    h1 {
      color: #333;
      text-align: center;
    }

    .btn-agregar {
      display: inline-block;
      background-color: #4e4376;
      color: white;
      padding: 10px 20px;
      border-radius: 6px;
      text-decoration: none;
      margin-bottom: 20px;
      transition: background-color 0.3s ease;
    }

    .btn-agregar:hover {
      background-color: #2b5876;
    }

    .btn-regresar {
      display: inline-block;
      background-color: #007bff;
      color: white;
      padding: 10px 20px;
      border-radius: 6px;
      text-decoration: none;
      margin-bottom: 20px;
      transition: background-color 0.3s ease;
    }

    .btn-regresar:hover {
      background-color: #0056b3;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #fff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 6px 12px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 14px;
      text-align: center;
      border-bottom: 1px solid #e0e0e0;
    }

    th {
      background-color: #4e4376;
      color: white;
    }

    tr:hover {
      background-color: #f2f2f2;
    }

    img {
      border-radius: 6px;
      max-width: 100px;
      height: auto;
    }

    .acciones a {
      margin: 0 5px;
      text-decoration: none;
      color: #007bff;
      font-weight: bold;
    }

    .acciones a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <h1>Habitaciones</h1>

  <a href="/habitaciones/nuevo" class="btn-agregar">+ Agregar Nueva Habitación</a>
  <a href="/dashboard" class="btn-regresar">IR AL INICIO</a>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Número</th>
        <th>Tipo</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Estado</th>
        <th>Imagen</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% habitaciones.forEach(h => { %>
        <tr>
          <td><%= h.id %></td>
          <td><%= h.numero %></td>
          <td><%= h.tipo %></td>
          <td><%= h.descripcion %></td>
          <td>S/. <%= h.precio %></td>
          <td><%= h.estado %></td>
          <td>
            <% if (h.imagen) { %>
              <img src="/uploads/<%= h.imagen %>" alt="Imagen Habitación">
            <% } else { %>
              <em>Sin imagen</em>
            <% } %>
          </td>
          <td class="acciones">
            <a href="/habitaciones/editar/<%= h.id %>">Editar</a> |
            <a href="/habitaciones/eliminar/<%= h.id %>" onclick="return confirm('¿Seguro de eliminar esta habitación?')">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
